<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:gravity="center"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:id="@+id/ivRotate"-->
<!--            android:layout_width="@dimen/res_img_size"-->
<!--            android:layout_height="@dimen/res_img_size"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:contentDescription="@string/todo"-->
<!--            android:src="@drawable/heartrate" />-->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imgsplashicon"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            app:lottie_autoPlay="true"
            app:lottie_fileName="heartrate.json"
            app:lottie_loop="false" />

        <TextView
            android:id="@+id/tvMhr"
            style="@style/AppTheme.fontstylesRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/maxhrrate"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/font_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMhrValue"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/_200"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/font_size_30" />

            <TextView
                android:id="@+id/tvBeats"
                style="@style/AppTheme.fontstylesRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:text="@string/beats"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvThr"
            style="@style/AppTheme.fontstylesRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/targethrrate"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/font_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvThrValue"
                style="@style/AppTheme.fontstylesBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/_200_220"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/font_size_30" />

            <TextView
                android:id="@+id/tvBeats2"
                style="@style/AppTheme.fontstylesRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:text="@string/beats"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
