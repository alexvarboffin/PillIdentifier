<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp"
    android:padding="5dp"
    android:paddingTop="7dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E2E2"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <View
            android:id="@+id/n_divider"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary" />

        <com.walhalla.pillfinder.ui.helper.SquareImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/n_divider"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@color/placeholder"
            android:contentDescription="@string/app_name"
            android:minHeight="125dp"
            android:src="@drawable/placeholder" />

        <com.walhalla.pillfinder.ui.custom.CustomTextView
            android:id="@+id/name"
            tools:text="@string/home_screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <!--            <ImageView-->
        <!--                android:background="#BEBCBC"-->
        <!--                android:layout_margin="5dp"-->
        <!--                android:layout_alignParentRight="true"-->
        <!--                android:layout_alignParentTop="true"-->
        <!--                android:src="@drawable/ic_star_border_white_24dp"-->
        <!--                android:layout_width="42dp"-->
        <!--                android:layout_height="42dp"-->
        <!--                android:layout_alignParentEnd="true"-->
        <!--                android:contentDescription="@null" />-->

        <TextView
            android:id="@+id/id"
            tools:text="100000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:gravity="center_vertical|end"
            android:padding="3dp"
            android:textColor="#FFD600"
            android:textSize="12sp" />

        <!--            <TextView-->
        <!--                android:id="@+id/pageNumber"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_alignParentStart="true"-->
        <!--                android:layout_alignParentLeft="true"-->
        <!--                android:layout_alignParentTop="true"-->
        <!--                android:background="@drawable/rounded_corner"-->
        <!--                android:padding="18dp"-->
        <!--                android:textColor="#FFFFFF"-->
        <!--                tools:text="1000000" />-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>
